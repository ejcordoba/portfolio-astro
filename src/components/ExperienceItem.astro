---
interface Props {
  title: string;
  companyAndDate: string;
  description: string;
}
const { title, companyAndDate, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{companyAndDate}</time
>
<h3 class="text-lg font-semibold text-complementary-color dark:text-white mt-4">
  {title}
</h3>
<p
  class="mt-2 mb-4 text-base font-normal text-white dark:text-grey-400 text-pretty"
>
  {description}
</p>
