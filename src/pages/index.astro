---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../components/icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import CodeSandbox from "../components/icons/CodeSandbox.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Profile from "@/components/icons/Profile.astro";
---

<Layout
  title="Porfolio de Eduardo Córdoba. Desarrollador y Programador Web - Frontend/Fullstack. "
  description="Desarrollador Web Full Stack con varios años de experiencia en programación e informática. Viviendo la adquisición de experiencia, con voluntad de aprendizaje y de expansión personal."
>
  <main class="px-4">
    <SectionContainer class="xs:pt-10 py-44 pb-20 xs:w-full xs:mx-auto">
      <div class="flex gap-4 justify-evenly">
        <img
          class="rounded-full size-20 object-cover mb-4"
          src="photo.jpeg"
          alt="Eduardo Cordoba photo"
        />
        <div class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div>
      </div>
      <div class="flex xs:flex-col xs:max-w-xl">
        <h1
          class="text-white text-balance text-5xl font-bold flex flex-row gap-x-4 pb-4"
        >
          Hola, soy Eduardo Córdoba
        </h1>
        <p class="xs:text-2xl text-wrap">
          Administrador de Sistemas reconvertido en <span
            class="text-complementary-color"
            >Desarrollador Frontend/Fullstack.</span
          ><br /> He adquirido experiencia como programador en el sector del marketing
          digital desarrollando y manteniendo e-commerce como <span
            class="text-complementary-color">Prestashop</span
          >, <span class="text-complementary-color">BigCommerce</span> y proyectos
          headless con
          <span class="text-complementary-color">Angular</span>, y ahora en
          proceso de mejora y aprendizaje en frameworks orientados a producto
          tales como <span class="text-complementary-color">Vue.js</span>, y
          expandiendo a través del estudio de <span
            class="text-complementary-color">MEVN</span
          > y <span class="text-complementary-color">React js.</span>
        </p>
        <nav class="flex md:gap-x-4 mt-8">
          <SocialPill href="https://www.linkedin.com/in/e-j-cordoba/">
            <LinkedInIcon class="size-6" />
            LinkedIn
          </SocialPill>
          <SocialPill href="https://github.com/ejcordoba">
            <GitHubIcon class="size-6" />
            GitHub
          </SocialPill>
          <SocialPill href="mailto:eduardo.cordoba.j@gmail.com">
            <MailIcon class="size-6" />
            eduardo.cordoba.j@gmail.com
          </SocialPill>
        </nav>
      </div>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefCase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeSandbox class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer class="pt-10" id="about">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Profile class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
